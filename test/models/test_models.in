#!@PYTHON@

from subprocess import call
import os
import sys
import tempfile

prefix = "@prefix@"
datadir = "@datadir@/ester/test/models/"
use_hdf5 = @use_hdf5@

ester_check_dir = tempfile.mkdtemp()

try:
    os.chdir(ester_check_dir)
except:
    print("Could not chdir into: " + ester_check_dir)
    sys.exit(1)

file1 = "test_model1.hdf5" if use_hdf5 == 1 else "test_model1"
out1 = "test_out1.hdf5" if use_hdf5 == 1 else "test_out1"

file2 = "test_model2.hdf5" if use_hdf5 == 1 else "test_model2"
out2 = "test_out2.hdf5" if use_hdf5 == 1 else "test_out2"

file3 = "test_model3.hdf5" if use_hdf5 == 1 else "test_model3"
out3 = "test_out3.hdf5" if use_hdf5 == 1 else "test_out3"

file4 = "test_model4.hdf5" if use_hdf5 == 1 else "test_model4"
out4 = "test_out4.hdf5" if use_hdf5 == 1 else "test_out4"

def cleanup():
    try:
        os.remove(file1)
        os.remove(out1)
        os.remove(file2)
        os.remove(out2)
        os.remove(file3)
        os.remove(out3)
        os.remove(file4)
        os.remove(out4)
    except:
        pass

    os.removedirs(ester_check_dir)
    return


def exec_cmd(cmd, infile=None, outfile=None):
    cmd = prefix+"/bin/"+cmd
    if infile:
        f_in = open(infile,"r")
    else:
        f_in = None
    if outfile:
        f_out = open(outfile,"w")
    else:
        f_out = open("/dev/null", "w")

    try:
        out = call(cmd.split(), stdin=f_in, stdout=f_out)
    except IOError:
        print "IOError"
        print("RUN FAILED (except)")
        sys.exit(1)
    if f_in:
        f_in.close()
    if f_out:
        f_out.close()
    if out:
        print("RUN FAILED (out)")
        sys.exit(1)
    return out

def compare_files(file1,file2):
    try:
        f1=open(file1,"r");
    except:
        return(False)
    try:
        f2=open(file2,"r");
    except:
        f1.close()
        return(False)
    if not f1.read()==f2.read():
        f1.close()
        f2.close()
        return False
    else:
        f1.close()
        f2.close()
        return True

sys.stdout.write("Test model #1:\t")
cmd="ester 1d -M 5"
cmd=cmd+" -p "+datadir+"/1d.par -noplot -tol 1e-8 -maxit 100 -o " + file1
exec_cmd(cmd)
cmd="ester output " + file1
exec_cmd(cmd, datadir+"template_1d", out1)
test_result=compare_files(datadir+"out1", out1)
if test_result:
    print("OK")
else:
    print("COMPARE FAILED")
    cleanup()
    sys.exit(1)

